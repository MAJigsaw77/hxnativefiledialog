<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src/include" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src/include" />
	</files>

	<files id="nativefiledialog">
		<section if="linux">
			<compilerflag value="-I/usr/include/gtk-3.0" />
			<compilerflag value="-I/usr/x86_64-linux-gnu/gtk-3.0/include" />
			<compilerflag value="-I/usr/include/atk-1.0" />
			<compilerflag value="-I/usr/include/cairo" />
			<compilerflag value="-I/usr/include/pango-1.0" />
			<compilerflag value="-I/usr/include/glib-2.0" />
			<compilerflag value="-I/usr/x86_64-linux-gnu/glib-2.0/include" />
			<compilerflag value="-I/usr/include/pixman-1" />
			<compilerflag value="-I/usr/include/freetype2" />
			<compilerflag value="-I/usr/include/libpng12" />
		</section>

		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src/include" />
		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src" />

		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_common.c" />
		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_win.cpp" if="windows" />
		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_cocoa.m" if="macos" />
		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_gtk.c" if="linux" />
	</files>

	<target id="haxe">
		<section if="windows">
			<lib name="comctl32.lib" />
			<lib name="ole32.lib" />
			<lib name="shell32.lib" />
		</section>

		<vflag name="-framework" value="AppKit" if="macos" />

		<section if="linux">
			<lib name="-lgtk-3" />
			<lib name="-lgdk-3" />
			<lib name="-latk-1.0" />
			<lib name="-lgio-2.0" />
			<lib name="-lpangoft2-1.0" />
			<lib name="-lgdk_pixbuf-2.0" />
			<lib name="-lpangocairo-1.0" />
			<lib name="-lcairo" />
			<lib name="-lpango-1.0" />
			<lib name="-lfreetype" />
			<lib name="-lfontconfig" />
			<lib name="-lgobject-2.0" />
			<lib name="-lgmodule-2.0" />
			<lib name="-lgthread-2.0" />
			<lib name="-lglib-2.0" />
		</section>

		<files id="nativefiledialog" />
	</target>
</xml>
