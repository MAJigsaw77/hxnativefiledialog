<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src/include" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src/include" />
	</files>

	<files id="nativefiledialog">
		<section if="linux">
			<compilerflag value="-I/usr/include/gtk-3.0" />
			<compilerflag value="-I/usr/include/glib-2.0" />
		</section>

		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src/include" />
		<compilerflag value="-I${haxelib:hxnativefiledialog}/project/nativefiledialog/src" />

		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_common.c" />

		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_win.cpp" if="windows" />
		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_cocoa.m" if="macos" />
		<file name="${haxelib:hxnativefiledialog}/project/nativefiledialog/src/nfd_gtk.c" if="linux" />
	</files>

	<target id="haxe">
		<lib name="comctl32.lib" if="windows" />

		<vflag name="-framework" value="AppKit" if="macos" />

		<section if="linux">
			<lib name="-lgtk-3" />
			<lib name="-lglib-2.0" />
		</section>

		<files id="nativefiledialog" />
	</target>
</xml>
